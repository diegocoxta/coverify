    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn prettier",
      "yarn lint",
      "stylelint"
    ]
  }
}
