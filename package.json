{
  "name": "capinha",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dom-to-image-more": "2.12.0",
    "file-saver": "^2.0.5",
    "i18next": "22.0.2",
    "i18next-browser-languagedetector": "6.1.8",
    "i18next-http-backend": "1.4.4",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "react-i18next": "12.0.0",
